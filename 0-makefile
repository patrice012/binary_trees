CC = gcc
CFAGS = -Wall -Wextra -Werror -pedantic
SRC = binary_tree_print.c 0-main.c 0-binary_tree_node.c
OBJ = $(SRC:.c=.o)
NAME = 0-node
RM = rm -f
HEADER = binary_trees.h

.PHONY: all clean oclean fclean re

all: $(HEADER) $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
